<div class="container">
  <h1> <%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>

      <li><%= dose.ingredient.name %> - <%= dose.description %> (<%= link_to cocktail_path(@cocktail), method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>)</li>
    <% end %>
  </ul>
</div>
<br>
<div class="container">
  <%= link_to "Add ingredients", new_dose_path(@cocktail) %>
</div>
<div class="container">
  <%= link_to "Back to list", cocktails_path %>
</div>
