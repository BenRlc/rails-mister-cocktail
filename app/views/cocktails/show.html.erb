<div class="container">
  <h1> <%= @cocktail.name %></h1>
  <ul>
    <% @cocktail.doses.each do |dose| %>

      <li><%= dose.ingredient.name %> - <%= dose.description %> (<%= link_to cocktail_path(@cocktail), method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt trash-gold"></i>
      <% end %>)</li>
    <% end %>
  </ul>
</div>
<br>
<div class="container">
  <%= link_to "Add ingredients", new_dose_path(@cocktail), class: "link-add" %>
</div>
<div class="container">
  <%= link_to "Delete cocktail", cocktails_path, method: :delete,
      data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
      <% end %>
</div>

<div class="container link-back">
  <%= link_to "Back to list", cocktails_path, class: "link-back" %>
</div>

